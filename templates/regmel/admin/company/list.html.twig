{% extends "_layouts/blank.html.twig" %}

{% block title %}{{ 'control_panel'|trans }} - {{ 'companies'|trans }}{% endblock %}

{% block content %}
    {% include '_components/modal-confirm-remove.html.twig' %}

    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}

        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-body shadow">
                        <div class="d-flex justify-content-between">
                            <h2>{{ 'companies'|trans }}</h2>
                        </div>

                        <hr>

                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'name'|trans }}</th>
                                <th>{{ 'description'|trans }}</th>
                                <th>{{ 'cnpj'|trans }}</th>
                                <th>{{ 'phone'|trans }}</th>
                                <th>{{ 'site'|trans }}</th>
                                <th>{{ 'created_at'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for company in companies %}
                                <tr>
                                    <td><a href="#">{{ company.name }}</a></td>
                                    <td>{{ company.description ?? '-' }}</td>
                                    <td>{{ company.extraFields.cnpj ?? '-' }}</td>
                                    <td>{{ company.extraFields.telefone ?? '-' }}</td>
                                    <td>{{ company.extraFields.site ?? '-' }}</td>
                                    <td>{{ company.createdAt|date('d/m/Y H:i:s') }}</td>
                                    <td>
                                        <button class="btn btn-outline-warning btn-sm">
                                            {{ 'edit'|trans }}
                                        </button>
                                        <button
                                                class="btn btn-outline-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalRemoveConfirm"
                                                onclick="confirmRemove(this)"
                                                data-href="#">
                                            {{ 'delete'|trans }}
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">{{ 'no_data_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/modal-confirm-remove.js') }}"></script>
{% endblock %}
