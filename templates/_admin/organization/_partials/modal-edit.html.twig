<div class="modal fade" id="modalEditOrganization" tabindex="-1" aria-labelledby="modalEditOrganizationLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditOrganizationLabel">{{ 'edit_municipality'| trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="edit-organization" method="POST" action="">
          <input type="hidden" name="token" value="{{ csrf_token('edit-organization') }}">
          <div class="mb-3">
            <label for="organization-name" class="form-label">{{ 'name'| trans }}</label>
            <input type="text" class="form-control" id="organization-name" name="name" value="" required>
          </div>
          <div class="mb-3">
            <label for="organization-description" class="form-label">{{ 'description'| trans }}</label>
            <textarea class="form-control" id="organization-description" name="description" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="organization-cnpj" class="form-label">{{ 'cnpj'| trans }}</label>
            <input type="text" class="form-control" id="organization-cnpj" name="cnpj" value="">
          </div>
          <div class="mb-3">
            <label for="organization-site" class="form-label">{{ 'site'| trans }}</label>
            <input type="url" class="form-control" id="organization-site" name="site" value="">
          </div>
          <div class="mb-3">
            <label for="organization-phone" class="form-label">{{ 'phone'| trans }}</label>
            <input type="tel" class="form-control" id="organization-phone" name="phone" value="">
          </div>
          <div class="mb-3">
            <label for="organization-email" class="form-label">{{ 'email'| trans }}</label>
            <input type="email" class="form-control" id="organization-email" name="email" value="">
          </div>
          <div class="mb-3">
            <label for="organization-tipo" class="form-label">{{ 'tipo'| trans }}</label>
            <input type="text" class="form-control" id="organization-tipo" name="tipo" value="">
          </div>
          <div class="mb-3">
            <label for="organization-company-name" class="form-label">{{ 'company_name'| trans }}</label>
            <input type="text" class="form-control" id="organization-company-name" name="companyName" value="">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'cancel'| trans }}</button>
        <button type="submit" class="btn btn-primary" form="edit-organization">{{ 'save'| trans }}</button>
      </div>
    </div>
  </div>
</div>

{% block extra_javascripts %}
  <script src="{{ asset('js/organization/load-organization-infos.js') }}"></script>
{% endblock %}
