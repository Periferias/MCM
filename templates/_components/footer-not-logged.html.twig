            </div>
            <div class="modal-body">
                {{ env.aurora.terms.lgpd }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
